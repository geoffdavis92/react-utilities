{
	"name": "@geoffdavis/react-utilities",
	"version": "0.0.0",
	"description": "Utility library for React",
	"main": "index.js",
	"directories": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/geoffdavis92/react-utilities.git"
	},
	"author": "geoffdavis92",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/geoffdavis92/react-utilities/issues"
	},
	"homepage": "https://github.com/geoffdavis92/react-utilities#readme",
	"scripts": {
		"prettier": "./node_modules/.bin/prettier {./*.{js,json},./src/{*.js,{utilities,components}/**/*.js}} --write",
		"test": "jest",
		"webpack": "NODE_ENV=dev webpack --watch",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"dependencies": {
		"react": "^16.0.0",
		"react-dom": "^16.0.0",
		"react-router": "^4.2.0",
		"styled-components": "^2.2.0"
	},
	"devDependencies": {
		"@storybook/react": "^3.2.11",
		"babel-core": "^6.26.0",
		"babel-jest": "^21.2.0",
		"babel-loader": "^7.1.2",
		"babel-plugin-transform-decorators": "^6.24.1",
		"babel-plugin-transform-flow-strip-types": "^6.22.0",
		"babel-preset-env": "^1.6.0",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-2": "^6.24.1",
		"jest": "^21.2.1",
		"prettier": "^1.7.3",
		"webpack": "^3.6.0"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"browsers": [
							"last 5 versions"
						]
					}
				}
			],
			"react",
			"stage-2"
		],
		"plugins": [
			"transform-decorators",
			"transform-flow-strip-types"
		]
	},
	"jest": {
		"testPathIgnorePatterns": [
			"node_modules"
		],
		"transform": {
			"^.+\\.(m)?js$": "babel-jest"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"parser": "flow",
		"printWidth": 90,
		"semi": true,
		"singleQuote": false,
		"useTabs": true
	}
}
